<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.a12.cambioproject.HomeScreenActivity"
    tools:showIn="@layout/activity_home_screen">

    <Button
        android:id="@+id/btnStart1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Play!"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="29dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="26dp"
        android:onClick="btnStart1Click"/>

    <Button
        android:id="@+id/btnHowTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to play"
        app:layout_constraintRight_toLeftOf="@+id/About"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="29dp"
        android:layout_marginRight="0dp"
        android:onClick="btnHowToClick"/>

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About us"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="22dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnHowTo"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="22dp"
        android:onClick="btnAboutClick"/>


</android.support.constraint.ConstraintLayout>
